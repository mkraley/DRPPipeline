{
  "manifest_version": 3,
  "name": "DRP Collector",
  "version": "1.0.4",
  "description": "Save pages as PDF and send to the DRP Interactive Collector",
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": ["html2pdf.bundle.min.js", "page.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://catalog.data.gov/*",
    "https://*.data.gov/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": [
        "*://localhost/*extension/launcher*",
        "*://127.0.0.1/*extension/launcher*",
        "*://catalog.data.gov/*",
        "*://*.data.gov/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
